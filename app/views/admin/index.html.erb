<!-- ADMIN -->
<section class="admin">
	<h2 class="title-section">Admin</h2>
	<div class="content-section">
		<div class="admin-content">
			<!-- IF SIGN IN -->
			<% if user_signed_in? %>
				<!-- IF NOT ADMIN -->
				<% if current_user.role == "member" %>
					<!-- MEMBER -->
					<div class="sign-in-plz">
						<%= link_to :home do %>
							<p class="sign-in">You are not Admin ! go to Home</p>
						<% end %>
					</div>
				<% else %>
					<!-- ADMIN -->
					<h3 class="title-admin-wellcome">
						Wellcome <%= current_user.name %> - Admintration
					</h3>
					<div class="admin-step-icon">
						<div class="control">
							<div class="user">
								<i class="fa fa-users fa-5x"></i>
								<span class="title-user">User</span>
							</div>
							<div class="blog">
								<i class="fa fa-heart fa-5x"></i>
								<span class="title-blog">Blog</span>
							</div>
							<div class="message">
								<%= link_to "message"  do %>
									<i class="fa fa-envelope fa-5x"></i>
								<% end %>
								<span class="title-blog">Message</span>
							</div>
						</div>
						<div class="center-blog-user-admin-page">
							<div class="control-step-user">
								<div id="back-button" >
									<i class="fa fa-angle-left fa-5x"></i>
									<span>Back</span>
								</div>
								<div>
									<%= link_to "user-log"  do %>
										<i class="fa fa-file-text-o fa-5x"></i>
									<% end %>
									<span>User Log</span>
								</div>
								<div>
									<%= link_to "user-details"  do %>
										<i class="fa fa-list-ul fa-5x"></i>
									<% end %>
									<span>User Details</span>
								</div>
							</div>
						</div>
						<div class="center-blog-user-admin-page">
							<div class="control-step-blog">
								<div id="back-button" >
									<i class="fa fa-angle-left fa-5x"></i>
									<span>Back</span>
								</div>
								<div>
									<%= link_to "add-new-blog"  do %>
										<i class="fa fa-plus fa-5x"></i>
									<% end %>
									<span>Add new blog</span>
								</div>
								<div>
									<%= link_to "blog-control"  do %>
										<i class="fa fa-heart fa-5x"></i>
									<% end %>
									<span>Blog control</span>
								</div>
							</div>
						</div>
					</div>
				<% end %>				
			<!-- NO SIGN IN -->
			<% else %>
				<!-- NOT MEMBER -->
				<div class="sign-in-plz">
					<%= link_to :home do %>
						<p class="sign-in">Please Sign in</p>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</section>
<script type="text/javascript">
	$(document).ready(function() {
		Userviews();
		UserviewsNextStep ();
		Blogviews();
		BlogviewsNextStep();
		SetWidthValue();
		SetContentHeightValue();
		$(".content-section").mCustomScrollbar({theme:"light-thin",scrollButtons:{enable:true}});
		ShowSocialView();
		$(".left-slider li.admin i").addClass('active-icon');
		$(".left-slider li.admin").addClass('active');
		$('title').html('Admin - Rails tutorial');
	});	

	function Userviews () {
		$('.admin-step-icon .control .fa-users').click(function() {
			$('.admin-step-icon .control').slideUp(750);
			$('.admin-step-icon .control-step-user').slideDown(750);
		});
	};
	function UserviewsNextStep () {
		$('.admin-step-icon .control-step-user .fa-angle-left').click(function() {
			$('.admin-step-icon .control').slideDown(750);
			$('.admin-step-icon .control-step-user').slideUp(750);
		});
	};
	function Blogviews () {
		$('.admin-step-icon .control .fa-heart').click(function() {
			$('.admin-step-icon .control').slideUp(750);
			$('.admin-step-icon .control-step-blog').slideDown(750);
		});
	};
	function BlogviewsNextStep () {
		$('.admin-step-icon .control-step-blog .fa-angle-left').click(function() {
			$('.admin-step-icon .control').slideDown(750);
			$('.admin-step-icon .control-step-blog').slideUp(750);
		});
	};
</script>
