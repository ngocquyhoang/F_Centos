<!-- ADMIN -->
<section class="admin">
	<h2 class="title-section">Admin page</h2>
	<div class="content-section">
		<div class="admin-content">
			<!-- IF SIGN IN -->
			<% if user_signed_in? %>
				<!-- IF NOT ADMIN -->
				<% if current_user.role == "member" %>
					<!-- MEMBER -->
					<div class="sign-in-plz">
						<%= link_to :home do %>
							<p class="sign-in">You are not Admin ! go to Home</p>
						<% end %>
					</div>
				<% else %>
					<!-- ADMIN -->
					<h3 class="title-admin-wellcome">
						Wellcome <%= current_user.name %> - Admintration
					</h3>
					<div class="admin-step-icon">
						<div class="control">
							<i class="fa fa-users fa-5x"></i>
							<i class="fa fa-heart fa-5x"></i>
						</div>
						<div class="control-step-user">
							<i class="fa fa-file-text-o fa-5x"></i>
							<i class="fa fa-list-ul fa-5x"></i>
						</div>
						<div class="control-step-blog">
							<i class="fa fa-users fa-5x"></i>
							<i class="fa fa-heart fa-5x"></i>
						</div>
					</div>
					<!-- SEE ALL USER LOG -->
					<!-- SEE ALL USER -->
					<!-- CREATE NEW BLOG -->
					<!-- MANAGE BLOG  ADD - EDIT - DELETE -->
				<% end %>				
			<!-- NO SIGN IN -->
			<% else %>
				<!-- NOT MEMBER -->
				<div class="sign-in-plz">
					<%= link_to :home do %>
						<p class="sign-in">Please Sign in</p>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</section>
<script type="text/javascript">
	$(document).ready(function() {
		Userviews();
		SetWidthValue();
		SetContentHeightValue();
		$(".content-section").mCustomScrollbar({theme:"light-thin",scrollButtons:{enable:true}});
		ShowSocialView();
		$(".left-slider li.admin i").addClass('active-icon');
		$(".left-slider li.admin").addClass('active');
		$('title').html('Admin - Rails tutorial');
	});	

	function Userviews () {
		$('.admin-step-icon .control .fa-users').click(function() {
			$('.admin-step-icon .control').slideUp(500);
			$('.admin-step-icon .control-step-user').slideDown(500);
		});
	}
</script>
