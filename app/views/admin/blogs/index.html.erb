<!-- BLOG -->
<section class="blog">
	<h2 class="title-section">Blog</h2>
	<div class="content-section">
		<div class="blog-post-list">
			<% @admin_blogs.each do |b| %>
				<div class="blog-post-content">
					<%= link_to b do %><h3 class="post-title"><%= b.title %></h3><% end %>
					<h4 class="time-post"><%= b.created_at.in_time_zone(7).strftime("%B - %d - %Y  %H:%M") %></h4>
					<%= link_to b do %>
					  <img src="/assets/fashion.jpg" alt="Post demo image" class="post-image" />
					<% end %>
					<div class="post-content center-width">
						<p>
							<%= b.content %>
						</p>
					</div>
				</div>
				<hr />
			<% end %>
		</div>
	</div>
</section>
<script type="text/javascript">
	$(document).ready(function() {
		SetWidthValue();
		SetContentHeightValue();
		$(".content-section").mCustomScrollbar({theme:"light-thin",scrollButtons:{enable:true}});
		ShowSocialView();
		$(".left-slider li.blog").addClass('active');
		$(".left-slider li.blog i").addClass('active-icon');
		$('title').html('Blog - Rails tutorial');
	});	
</script>