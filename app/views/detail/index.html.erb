<!-- DETAIL -->
<section class="detail">
	<h2 class="title-section">Detail user</h2>
	<% if user_signed_in? %>
	<div class="content-section">
		<div class="detail-content center-width">
			<h3>User Log</h3>
			<table class="table">
				<thead>
					<tr>
						<th>User ID</th>
						<th>IP</th>
						<th>Content log</th>
						<th>Time</th>
					</tr>
				</thead>
				<tbody>
					<% @user_logs.each do |user_log| %>
						<tr>
							<td><%= user_log.user_id %></td>
							<td><%= current_user.current_sign_in_ip %></td>
							<td><%= user_log.log_data %></td>
							<td><%= user_log.created_at %></td>
						</tr>
					<% end %>
					<tr>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
					</tr>
				</tbody>
			</table>
		</div>
		<!-- User Details -->
		<div class="center-width">
			<h3>User details</h3>
			<table class="table">
				<tbody>
					<tr>
						<td>User ID</td>
						<td><%= current_user.id %></td>
					</tr>
					<tr>
						<td>User Email</td>
						<td><%= current_user.email %></td>
					</tr>
					<tr>
						<td>User Name</td>
						<td>Do Tuan Anh</td>
					</tr>
					<tr>
						<td>Gender</td>
						<td>Male</td>
					</tr>
					<tr>
						<td>Age</td>
						<td>22</td>
					</tr>
					<tr>
						<td>Address</td>
						<td>126 - My Dinh street, Nam Tu Liem distric Ha Noi City</td>
					</tr>
					<tr>
						<td>Phone number</td>
						<td>0987789987</td>
					</tr>
					<tr>
						<td>Sign in count</td>
						<td><%= current_user.sign_in_count %></td>
					</tr>
					<tr>
						<td>Comment count</td>
						<td>15</td>
					</tr>
					<tr>
						<td>Create at</td>
						<td><%= current_user.created_at %></td>
					</tr>
					<tr>
						<td>Last sign in at</td>
						<td><%= current_user.last_sign_in_at %></td>
					</tr>
					<tr>
						<td>Last sign in IP</td>
						<td><%= current_user.last_sign_in_ip %></td>
					</tr>
					<tr>
						<td>Current sign in IP</td>
						<td><%= current_user.current_sign_in_ip %></td>
					</tr>
					<tr>
						<td></td>
						<td></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<% else%>
		<div class="sign-in-plz">
			<p class="sign-in">Please Sign in</p>
		</div>
	<% end%>
</section>
<script type="text/javascript">
	$(document).ready(function() {
		SetWidthValue();
		SetContentHeightValue();
		$(".content-section").mCustomScrollbar({theme:"light-thin",scrollButtons:{enable:true}});
		ShowSocialView();
		$(".left-slider li.detail i").addClass('active-icon');
		$(".left-slider li.detail").addClass('active');
		$('title').html('Details user - Rails tutorial');
	});	
</script>